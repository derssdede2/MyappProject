<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ── Professional Dark Theme — Endpoint Diagnostics ── -->

    <!-- Core Colors — improved contrast hierarchy -->
    <Color x:Key="BluePrimaryColor">#D4915A</Color>
    <Color x:Key="BlueDarkColor">#C76E3F</Color>
    <Color x:Key="BlueLightColor">#E8B888</Color>
    <Color x:Key="GreenSuccessColor">#4ADE80</Color>
    <Color x:Key="RedDangerColor">#F87171</Color>
    <Color x:Key="TextDarkColor">#F1F5F9</Color>
    <Color x:Key="TextMutedColor">#94A3B8</Color>
    <Color x:Key="BgMainColor">#111111</Color>
    <Color x:Key="BgCardColor">#1C1C1C</Color>
    <Color x:Key="BorderColor">#2E2E2E</Color>
    <Color x:Key="DisabledBgColor">#2A2A2A</Color>
    <Color x:Key="DisabledFgColor">#525252</Color>

    <!-- Core Brushes -->
    <SolidColorBrush x:Key="BluePrimary" Color="{StaticResource BluePrimaryColor}" />
    <SolidColorBrush x:Key="BlueDark" Color="{StaticResource BlueDarkColor}" />
    <SolidColorBrush x:Key="BlueLight" Color="{StaticResource BlueLightColor}" />
    <SolidColorBrush x:Key="GreenSuccess" Color="{StaticResource GreenSuccessColor}" />
    <SolidColorBrush x:Key="RedDanger" Color="{StaticResource RedDangerColor}" />
    <SolidColorBrush x:Key="TextDark" Color="{StaticResource TextDarkColor}" />
    <SolidColorBrush x:Key="TextMuted" Color="{StaticResource TextMutedColor}" />
    <SolidColorBrush x:Key="BgMain" Color="{StaticResource BgMainColor}" />
    <SolidColorBrush x:Key="BgCard" Color="{StaticResource BgCardColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

    <!-- Header Gradient — subtle warm lift so it reads as distinct from cards -->
    <LinearGradientBrush x:Key="HeaderBg" StartPoint="0,0" EndPoint="1,0.4">
        <GradientStop Color="#1E1819" Offset="0" />
        <GradientStop Color="#2A2022" Offset="0.4" />
        <GradientStop Color="#221C1E" Offset="1" />
    </LinearGradientBrush>

    <!-- Neutral / Cancel Buttons -->
    <LinearGradientBrush x:Key="NeutralBtnBg" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2E2E2E" Offset="0" />
        <GradientStop Color="#222222" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="NeutralBtnBorder" Color="#404040" />
    <SolidColorBrush x:Key="NeutralBtnForeground" Color="#E5E7EB" />

    <!-- Theme-aware button gradients -->
    <LinearGradientBrush x:Key="PrimaryBtnGrad" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#C76E3F" Offset="0" />
        <GradientStop Color="#A85A30" Offset="1" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SuccessBtnGrad" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#22C55E" Offset="0" />
        <GradientStop Color="#16A34A" Offset="1" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SecondaryBtnGrad" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#7A2030" Offset="0" />
        <GradientStop Color="#5C1825" Offset="1" />
    </LinearGradientBrush>

    <!-- Progress Bar -->
    <SolidColorBrush x:Key="ProgressTrackBg" Color="#2A2A2A" />
    <LinearGradientBrush x:Key="ProgressFillBg" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#C76E3F" Offset="0" />
        <GradientStop Color="#E8A060" Offset="0.5" />
        <GradientStop Color="#C76E3F" Offset="1" />
    </LinearGradientBrush>

    <!-- Log Pane -->
    <SolidColorBrush x:Key="LogBg" Color="#141414" />
    <SolidColorBrush x:Key="LogFg" Color="#D4D4D8" />
    <SolidColorBrush x:Key="LogCaret" Color="#94A3B8" />
    <SolidColorBrush x:Key="LogTimestamp" Color="#64748B" />
    <SolidColorBrush x:Key="WarnFg" Color="#FBBF24" />
    <SolidColorBrush x:Key="SuccessFg" Color="#4ADE80" />
    <SolidColorBrush x:Key="DangerFg" Color="#F87171" />

    <!-- Chrome / Header Text -->
    <SolidColorBrush x:Key="ChromeHoverBg" Color="#20FFFFFF" />
    <SolidColorBrush x:Key="HeaderTitleFg" Color="#F1F5F9" />
    <SolidColorBrush x:Key="HeaderSubtitleFg" Color="#D4915A" />
    <SolidColorBrush x:Key="ToggleThemeFg" Color="#F1F5F9" />

    <!-- Tooltip — lighter surface for dark mode visibility -->
    <SolidColorBrush x:Key="TooltipBg" Color="#2A2A2A" />
    <SolidColorBrush x:Key="TooltipFg" Color="#F1F5F9" />
    <SolidColorBrush x:Key="TooltipBorder" Color="#404040" />

    <!-- ── Custom Scrollbar — thin, modern, rounded ── -->
    <Style TargetType="ScrollBar">
        <Setter Property="Width" Value="6" />
        <Setter Property="MinWidth" Value="6" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Opacity" Value="0.45" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Height" Value="6" />
                <Setter Property="MinHeight" Value="6" />
                <Setter Property="Width" Value="Auto" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
