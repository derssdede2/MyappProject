<Application x:Class="DLack.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ProfessionalLight.xaml" />
            </ResourceDictionary.MergedDictionaries>

        <!-- ── Modern Button Base Style ── -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Blue Primary Button -->
        <Style x:Key="BluePrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Shadow" CornerRadius="10" Background="#18000000" Margin="1,2,1,0">
                                <Border.Effect><BlurEffect Radius="6" /></Border.Effect>
                            </Border>
                            <Border x:Name="Body" CornerRadius="10" Margin="0,0,0,2" RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="BodyTranslate" Y="0" />
                                </Border.RenderTransform>
                                <Border.Background>
                                    <DynamicResourceExtension ResourceKey="PrimaryBtnGrad" />
                                </Border.Background>
                                <Grid>
                                    <Border CornerRadius="10,10,0,0" VerticalAlignment="Top" MaxHeight="22" Opacity="0.15">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#FFFFFF" Offset="0" />
                                                <GradientStop Color="#00FFFFFF" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" />
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Body" Storyboard.TargetProperty="Opacity"
                                                         To="0.88" Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Body" Storyboard.TargetProperty="Opacity"
                                                         To="1.0" Duration="0:0:0.15" />
                                        <DoubleAnimation Storyboard.TargetName="BodyTranslate" Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="Shadow" Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="BodyTranslate" Storyboard.TargetProperty="Y"
                                                             To="2" Duration="0:0:0.06" />
                                            <DoubleAnimation Storyboard.TargetName="Shadow" Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.06" />
                                            <DoubleAnimation Storyboard.TargetName="Body" Storyboard.TargetProperty="Opacity"
                                                             To="0.78" Duration="0:0:0.06" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Body" Property="Background" Value="{DynamicResource BorderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource TextMuted}" />
                                <Setter TargetName="Shadow" Property="Opacity" Value="0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

