        <!-- Neutral/Cancel Button (for dialogs) -->
        <Style x:Key="NeutralButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Foreground" Value="{DynamicResource NeutralBtnForeground}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Shadow" CornerRadius="10" Background="#10000000" Margin="1,2,1,0">
                                <Border.Effect><BlurEffect Radius="4" /></Border.Effect>
                            </Border>
                            <Border x:Name="Body" CornerRadius="10" Margin="0,0,0,2"
                                    Background="{DynamicResource NeutralBtnBg}"
                                    BorderBrush="{DynamicResource NeutralBtnBorder}" BorderThickness="1" RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="BodyTranslate" Y="0" />
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
